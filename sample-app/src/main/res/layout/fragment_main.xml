<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment"
    android:layout_margin="16dp">

    <Button
        android:id="@+id/launchCatJourneyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_cat_journey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/catImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dimens_360dp"
        android:minHeight="@dimen/dimens_360dp"
        android:text="@string/launch_cat_journey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/launchCatJourneyBtn"
        android:layout_marginTop="16dp"
        android:contentDescription="@null" />

</androidx.constraintlayout.widget.ConstraintLayout>